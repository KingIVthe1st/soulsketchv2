# SoulmateSketch Professional Backend Configuration
# Copy this file to .env and configure your values

# Development/Production Environment
NODE_ENV=development

# Server Configuration
PORT=8080

# OpenAI Configuration (Required for AI image generation and text)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe Payment Configuration (Required for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Email Delivery Configuration (Optional - will log emails if not configured)
# SMTP Configuration for professional email delivery
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@soulmatesketch.com

# Alternative email services (choose one):
# For SendGrid:
# SENDGRID_API_KEY=SG.your-sendgrid-api-key
# For Mailgun:
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=mg.yourdomain.com

# Database Configuration
# SQLite database path (relative to project root)
DATABASE_PATH=./db/soulmatesketch.sqlite

# File Storage Configuration
UPLOADS_DIR=./uploads
LOGS_DIR=./logs

# Security Configuration
# JWT secret for any authentication features
JWT_SECRET=your-jwt-secret-here-minimum-32-characters

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Professional Features Configuration
# Enable/disable features
ENABLE_EMAIL_DELIVERY=true
ENABLE_ORDER_CONFIRMATIONS=true
ENABLE_MONITORING_ENDPOINTS=true
ENABLE_MAINTENANCE_ENDPOINTS=false

# PDF Generation Configuration
PDF_BRAND_COLOR=#E91E63
PDF_ACCENT_COLOR=#2D2240
PDF_FONT_FAMILY=Helvetica

# Image Generation Configuration
DEFAULT_IMAGE_STYLE=realistic
DEFAULT_IMAGE_SIZE=1024x1024
IMAGE_QUALITY=hd
ENABLE_IMAGE_OPTIMIZATION=true

# Cleanup Configuration
AUTO_CLEANUP_ENABLED=false
CLEANUP_OLDER_THAN_DAYS=7
CLEANUP_SCHEDULE_CRON=0 2 * * *

# Monitoring & Analytics
ENABLE_DETAILED_LOGGING=true
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here

# External Service Timeouts (in milliseconds)
OPENAI_TIMEOUT=60000
STRIPE_TIMEOUT=30000
EMAIL_TIMEOUT=30000

# Cache Configuration
ENABLE_RESPONSE_CACHING=false
CACHE_TTL_SECONDS=300

# Development Configuration
DEBUG_MODE=false
EXPOSE_DEBUG_ENDPOINTS=false
SAVE_RAW_QUIZ_DATA=false